<% if (message) { %>
    <div style="text-align: center;" class="alert alert-<%= message.type %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>
            <%= message.intro %>
        </strong>
        <%= message.message %>
    </div>
    <% } %>

        <h1 class="mt-3 ml-3">New Wiki</h1>
        <form class="m-3" action="/new" method="post">
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
                <input maxlength="20" name="title" type="text" class="form-control"
                    placeholder="Title can have spaces and upper case letters">
            </div>
            <div class="form-floating">
                <label for="floatingTextarea">MarkDown Content:</label>
                <textarea name="content" class="form-control" placeholder="Type in the content here in MarkDown format"
                    rows="10" id="floatingTextarea"></textarea>
            </div>
            <button class="btn btn-primary w-100 mt-3" type="submit">Submit</button>
        </form>

        <script>
            document.getElementById('new').classList.add('active')
        </script>