<% if (message) { %>
    <div style="text-align: center;" class="alert alert-<%= message.type %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>
            <%= message.intro %>
        </strong>
        <%= message.message %>
    </div>
    <% } %>

        <h1 class="mt-3 ml-3">Edit Wiki</h1>
        <form class="m-3" action="/wiki/<%= urlInput %>/edit" method="post">
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
                <input name="title" maxlength="20" type="text" class="form-control"
                    placeholder="Title can have spaces and upper case letters" value="<%= titleInput %>">
            </div>
            <div class="form-floating">
                <label for="floatingTextarea">MarkDown Content:</label>
                <textarea name="content" class="form-control" placeholder="Type in the content here in MarkDown format"
                    rows="10" id="floatingTextarea"><%= contentTextArea %></textarea>
            </div>
            <button class="btn btn-primary w-100 mt-3" type="submit">Change</button>
            <button class="btn btn-secondary w-100 mt-2"
                onclick="window.location = window.location.href.slice(0, window.location.href.length - 5)"
                type="button">Go Back</button>
        </form>